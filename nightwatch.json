{
    "src_folders": ["tests"],
    "page_objects_path": ["pages"],
    "output_folder": "reports",
    "selenium": {
        "start_process": true,
        "server_path": "./bin/lib/selenium-server-standalone-3.11.0.jar",
        "log_path": "./selenium-log",
        "port": 4444,
        "cli_args": {
            "webdriver.chrome.driver": "./bin/drivers/chromedriver"
        }
    },

    "test_settings": {
        "default": {
            "launch_url": "https://www.instagram.com/",
            "selenium_port": 4444,
            "selenium_host": "127.0.0.1",
            "silent": true,
            "screenshots": {
                "enabled": true,
                "on_failure": true,
                "on_error": true,
                "path": "./screenshot"
            },
            "desiredCapabilities": {
                "browserName": "chrome"
            }
        }
    }
}